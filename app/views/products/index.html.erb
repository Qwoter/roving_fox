<h1 class="title_form_admin">Listing products</h1>

<table class="products_form_admin" border="1" frame="void" rules="all">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Product</th>
      <th>Message</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.email %></td>
        <td><%= product.phone_number %></td>
        <td><%= product.product %></td>
        <td><%= product.message %></td>
        <td><%= product.created_at.strftime("%H:%M %d-%m-%Y") %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

